<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExibirActivity">

    <include layout="@layout/toolbar" />
    <LinearLayout
            android:orientation="vertical"
            style="@style/Widget.AppCompat.ActionMode"
            android:layout_width="315dp"
            android:layout_height="232dp"
            android:id="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="308dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/include" app:layout_constraintVertical_bias="0.565">
        <TextView
                android:text="Nome"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNome"/>
        <TextView
                android:text="Pedido:"
                android:textColor="@color/colorText"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <TextView
                android:text="TextView"

                android:layout_width="match_parent"
                android:layout_height="36dp" android:id="@+id/txtPedido"/>
        <TextView
                android:text="Data de Entrega:"
                android:textColor="@color/colorText"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="36dp" android:id="@+id/txtData"/>
        <TextView
                android:text="EndereÃ§o de Entrega:"
                android:textColor="@color/colorText"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="36dp" android:id="@+id/txtEndereco"/>
    </LinearLayout>
    <Button
            android:id="@+id/btnFinalizar"
            android:text="Finalizar"
            android:textColor="@color/colorbranca"
            android:background="@drawable/corbutton"
            android:layout_width="130dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toEndOf="@+id/btnImpedido"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.107"/>

    <Button
            android:id="@+id/btnImpedido"
            app:layout_constraintVertical_bias="0.107"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnFinalizar"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginTop="8dp"
            android:text="Impedido"
            android:textColor="@color/colorbranca"
            android:background="@drawable/corbutton"
            android:layout_width="130dp"
            android:layout_height="32dp"
    />
    <EditText
            android:layout_width="333dp"
            android:visibility="invisible"
            android:layout_height="43dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editCMT"
            android:hint="Motivo do impedimento"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.645"/>
    <Button
            android:id="@+id/btnSalva"
            android:text="Salvar"
            android:visibility="invisible"
            android:textColor="@color/colorbranca"
            android:background="@drawable/corbutton"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/editCMT"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.035"/>
    "/>
</android.support.constraint.ConstraintLayout>